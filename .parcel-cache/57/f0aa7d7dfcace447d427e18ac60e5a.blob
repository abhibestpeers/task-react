.listContainer {
  width: 30%;
  height: 70%;
  display: block;
  box-sizing: border-box;
  overflow-x: auto;
  margin-top: 20px;
  overflow: hidden;
  position: relative;
  text-align: center;
  color: white;
  border-radius: 20px;
}
.listContainer .airport {
  background: #fff;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}
.listContainer .airport .description {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
}
.listContainer .airport .description .text-des {
  padding: 10px 15px;
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  z-index: 999;
  width: 93%;
  text-align: left;
}
.listContainer .airport .description .text-des h4 {
  margin-bottom: 5px;
  -webkit-transition: -webkit-transform 0.35s;
  transition: transform 0.35s;
}
.listContainer .airport .description .text-des .hover-text {
  margin-top: 10px;
  opacity: 0;
  -webkit-transition: opacity 0.2s, -webkit-transform 0.35s;
  transition: opacity 0.2s, transform 0.35s;
}
.listContainer .airport .description .text-des .hover-text p {
  margin-top: 0;
  margin-bottom: 5px;
}

.image {
  width: 100%;
  height: 100%;
}

.listContainer:hover .hover-text {
  opacity: 1;
  -webkit-transition-delay: 0.05s;
  transition-delay: 0.05s;
  -webkit-transition-duration: 0.35s;
  transition-duration: 0.35s;
}

figure {
  position: relative;
  float: left;
  overflow: hidden;
  margin: 10px 1%;
  min-width: 320px;
  max-width: 480px;
  max-height: 360px;
  width: 30%;
  background: #3085a3;
  text-align: center;
  cursor: pointer;
}

figure.effect-lily figcaption > div {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 2em;
  width: 100%;
  height: 50%;
}

figure.effect-lily .description,
figure.effect-lily .hover-text p {
  -webkit-transform: translate3d(0, 40px, 0);
  transform: translate3d(0, 40px, 0);
}

figure.effect-lily .description {
  -webkit-transition: -webkit-transform 0.35s;
  transition: transform 0.35s;
}

figure.effect-lily .hover-text p {
  color: rgba(255, 255, 255, 0.8);
  opacity: 0;
  -webkit-transition: opacity 0.2s, -webkit-transform 0.35s;
  transition: opacity 0.2s, transform 0.35s;
}

figure.effect-lily:hover img,
figure.effect-lily:hover .hover-text p {
  opacity: 1;
}

figure.effect-lily:hover img,
figure.effect-lily:hover .description,
figure.effect-lily:hover .hover-text p {
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
}

figure.effect-lily:hover .hover-text p {
  -webkit-transition-delay: 0.05s;
  transition-delay: 0.05s;
  -webkit-transition-duration: 0.35s;
  transition-duration: 0.35s;
}

* {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.description {
  display: flex;
  justify-content: space-between;
  align-items: center;
}