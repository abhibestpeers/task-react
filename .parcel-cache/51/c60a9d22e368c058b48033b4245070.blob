.airportsList {
  background: #ddd;
  height: 100vh;
  display: flex;
  gap: 20px;
}

.searchPage .d-flex {
  display: flex;
  justify-content: space-between;
}
.searchPage .airportPlace {
  display: flex;
  justify-content: space-between;
  width: 60%;
  margin: 50px auto 0;
  text-align: center;
}
.searchPage .airportPlace h2, .searchPage .airportPlace h3 {
  text-transform: uppercase;
}
.searchPage .airportPlace h3 {
  margin: 0px;
}
.searchPage .card .right-text p {
  margin: 0;
  border-right: 1px solid #ccc;
  padding-right: 15px;
  margin-right: 15px;
}
.searchPage .btn-success {
  background-color: #dc3545;
  border: 0px solid #dc3545;
  border-radius: 10px;
  padding: 12px;
  color: #fff;
}