.listContainer {
  width: 30%;
  height: 70%;
  display: block;
  box-sizing: border-box;
  overflow-x: auto;
  margin-top: 20px;
  overflow: hidden;
  position: relative;
  text-align: center;
  color: white;
  border-radius: 20px;
}

.airport {
  background: #fff;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}
.airport .description {
  position: absolute;
  bottom: 0;
  width: 100%;
}
.airport .description .text-des {
  padding: 0 15px;
  display: flex;
  justify-content: space-between;
}
.airport .description .text-des h4 {
  margin-bottom: 10px;
}
.airport .description .text-des h4 span {
  text-align: left;
}
.airport .description .text-des p {
  margin-top: 0;
  text-align: left;
}

.image {
  width: 100%;
  height: 100%;
}