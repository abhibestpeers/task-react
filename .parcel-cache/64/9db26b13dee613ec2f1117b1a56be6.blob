.listContainer {
  width: 30%;
  height: 70%;
  display: block;
  box-sizing: border-box;
  overflow-x: auto;
  margin-top: 20px;
  overflow: hidden;
  position: relative;
  text-align: center;
  color: white;
  border-radius: 20px;
}
.listContainer .airport {
  background: #fff;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}
.listContainer .airport .description {
  position: absolute;
  bottom: 0;
  width: 100%;
}
.listContainer .airport .description .text-des {
  padding: 10px 15px;
  display: flex;
  justify-content: space-between;
}
.listContainer .airport .description .text-des div {
  text-align: left;
}
.listContainer .airport .description .text-des div h4 {
  margin-bottom: 5px;
  -webkit-transition: -webkit-transform 0.35s;
  transition: transform 0.35s;
}
.listContainer .airport .description .text-des div .hover-text {
  margin-top: 10px;
  display: none;
}
.listContainer .airport .description .text-des div .hover-text p {
  margin-top: 0;
  margin-bottom: 5px;
}

.image {
  width: 100%;
  height: 100%;
}