.listContainer {
  width: 30%;
  height: 70%;
  display: block;
  box-sizing: border-box;
  overflow-x: auto;
  margin-top: 20px;
  overflow: hidden;
  position: relative;
  text-align: center;
  color: white;
  border-radius: 20px;
}

.airport {
  background: #fff;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}
.airport .description {
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
}

.image {
  width: 100%;
  height: 100%;
}