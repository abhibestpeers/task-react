.listContainer {
  width: 30%;
  height: 70%;
  display: block;
  box-sizing: border-box;
  overflow-x: auto;
  margin-top: 20px;
  overflow: hidden;
  position: relative;
  text-align: center;
  color: white;
  border-radius: 20px;
}
.listContainer .airport {
  background: #fff;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}
.listContainer .airport .description {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.listContainer .airport .description .text-des {
  padding: 10px 15px;
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  z-index: 999;
  width: 93%;
}
.listContainer .airport .description .text-des div {
  text-align: left;
}
.listContainer .airport .description .text-des div h4 {
  margin-bottom: 5px;
  -webkit-transition: -webkit-transform 0.35s;
  transition: transform 0.35s;
}
.listContainer .airport .description .text-des div .hover-text {
  margin-top: 10px;
  opacity: 0;
}
.listContainer .airport .description .text-des div .hover-text p {
  margin-top: 0;
  margin-bottom: 5px;
}

.image {
  width: 100%;
  height: 100%;
}

.listContainer:hover .hover-text {
  opacity: 1;
  -webkit-transition-delay: 0.05s;
  transition-delay: 0.05s;
  -webkit-transition-duration: 0.35s;
  transition-duration: 0.35s;
}
.airportsList {
  background-color: #fff;
  display: flex;
  width: 100vw;
  height: 100vh;
  justify-content: center;
  flex-wrap: wrap;
  gap: 20px;
  overflow: visible;
  margin-top: 10px;
}
.airportsList {
  background: #ddd;
  height: 100vh;
  display: flex;
  gap: 20px;
}
body {
  margin: 10px;
}
.searchBox {
  height: 10vh;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid orange;
}
